@page "/Artists"

@using Microsoft.AspNetCore.Authorization
@using Microsoft.Graph

@attribute [Authorize]
@inject PlayerState _playerState

<PageTitle>Artists</PageTitle>

@if (_playerState.IsLoading)
{
    <Spinner />
}
else
{
    <SongsContainer>
        @foreach (var item in _playerState.Artists)
        {
            <SongListItem Title="@item.Key" DriveItem="item.Value" Href="@($"/Artist/{item.Key}")" />
        }
    </SongsContainer>
}
