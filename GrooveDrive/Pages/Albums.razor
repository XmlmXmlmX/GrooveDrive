@page "/Albums"

@using Microsoft.AspNetCore.Authorization
@using Microsoft.Graph

@attribute [Authorize]
@inject PlayerState _playerState

<PageTitle>Albums</PageTitle>

@if (_playerState.IsLoading)
{
    <Spinner />
}
else
{
    <SongsContainer>
        @foreach (var item in _playerState.Albums)
        {
            <SongListItem Title="@item.Key" ThumbnailUrl="@item.Value.ThumbnailUrl" Href="@($"/Album/{item.Key}")" />
        }
    </SongsContainer>
}
